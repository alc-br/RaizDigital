# Example environment variables for RaizDigital backend

# Database connection URL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/raizdigital

# Secret key used for signing JWT tokens (replace in production)
SECRET_KEY=your_secret_key_here

# Stripe API credentials
STRIPE_API_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_12345  # optional price ID if using Stripe products

# Redis configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Internal API key for robot
INTERNAL_API_KEY=your_internal_api_key_here

# Frontend base URL (for email links)
FRONTEND_BASE_URL=http://localhost:5173

# Email configuration
EMAIL_SENDER=no-reply@raizdigital.com
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
